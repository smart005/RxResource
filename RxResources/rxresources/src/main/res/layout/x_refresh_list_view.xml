<?xml version="1.0" encoding="utf-8"?>
<com.cloud.resources.refresh.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/x_refresh_srfl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efefef"
    app:srlEnableLoadmore="true"
    app:srlReboundDuration="500">

    <com.cloud.resources.refresh.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_efefef"
        app:srlClassicsSpinnerStyle="Translate"
        app:srlDrawableArrowSize="20dp"
        app:srlDrawableMarginRight="20dp"
        app:srlDrawableProgressSize="20dp"
        app:srlEnableLastTime="true"
        app:srlFinishDuration="400"
        app:srlTextSizeTime="10dp"
        app:srlTextSizeTitle="16sp"
        app:srlTextTimeMarginTop="2dp" />

    <ListView
        android:id="@+id/x_refresh_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/spacing_0" />

    <com.cloud.resources.refresh.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_efefef" />
</com.cloud.resources.refresh.SmartRefreshLayout>